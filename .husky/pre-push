#!/bin/sh

echo "ğŸ” Running QA checks before push..."

# Run formatting check
echo "ğŸ“ Checking code formatting..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting check failed! Run 'npm run format' to fix."
  exit 1
fi

# Run linting
echo "ğŸ” Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting failed! Run 'npm run lint:fix' to fix auto-fixable issues."
  exit 1
fi

# Run type checking
echo "ğŸ”· Checking TypeScript types..."
NODE_OPTIONS="--max-old-space-size=4096" npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed! Fix type errors before pushing."
  exit 1
fi

echo "âœ… All QA checks passed! Proceeding with push..."
